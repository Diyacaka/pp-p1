<html>
<head>
    <meta charset="utf-8">
    <title>Node.js Tutorial - Simple Shopping Cart</title>
    <link href="https://getbootstrap.com/docs/5.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<style>
   
</style>
</head>
<body>
    <div class="container-fluid mt-5 mb-5">
        <h1 class="text-center"><b>Node.js Tutorial - Simple Shopping Cart</b></h1>
        <div class="mt-3 mb-3">
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header"><b>Product List</b></div>
                        <div class="card-body">
                            <div class="row">
                                <%  data.forEach(l => { %>
                                    <div class="col-md-4 mb-5 text-center">
                                       <img style="height: 50%;" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/5e/Imola_2009_moto.svg/519px-Imola_2009_moto.svg.png" class="img-thumbnial mb-3">
                                       <h4><b><%= l.name %></b></h4>
                                       <h5><b><%= l.price %></b></h5>
                                       <form action="/ticket" method="post">
                                            <input type="hidden" name="EventId" value="<%= l.id %>">
                                            <input type="hidden" name="name" value="<%= l.name %>">
                                            <input type="hidden" name="price" value="<%= l.price %>">
                                            <input type="submit" value="Add To Cart">
                                        </form>
                                   </div>
                                   <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header"><b>Shopping Cart</b></div>
                        <div class="card-body">
                            <table class="table">
                                <tr>
                                    <th>Name</th>
                                    
                                    <th>Price</th>
                                    <th>Total</th>
                                    <th>Remove</th>
                                </tr>
                                <% if (cart.length > 0) { %>
                                    <% let total = 0 %>
                                    <% cart.forEach(item => { %>
                                     <tr>
                                        <td><%= item.name %></td>
                                        <td><%= item.price %></td>
                                        <td><%= (item.quantity) * (item.price) %></td>
                                        <td><button type="button" class="btn btn-danger btn-sm" onclick="remove_item('<%= item.EventId %>')">Remove</button></td>
                                     </tr>
                                     <% total += parseFloat(item.quantity) * parseFloat(item.price) %>
                                    <% }) %>
                                    <tr>
                                        <td colspan="3" align="right"><b>Total</b></td>
                                        <td><%= total %></td>
                                       <td> <a href="/transaction">BUY</a></td>
                                        <td>&nbsp;</td>
                                    </tr>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" align="center">No Item In Cart</td>
                                    </tr>
                                <% } %>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            
        </div>
    </div>
</body>
</html>

<script>

function remove_item(item_id)
    {
        if(confirm("Are you sure you want to remove it?"))
        {
            window.location.href = `/remove_item?id=${item_id}`;
        }
    }

</script>